
public class ElectronicsStore {

	public static double getPrice(String item, boolean damaged) {
		double price;
		
		if (item == "Ipad") {
			if (damaged == true) {
				price = 350.99/2;
			}
			else {
				price = 350.99; 
			}
		}
		else if (item == "Macbook") { 
			if (damaged == true) {
			price = 1100.00/2;
			}
			else {
				price = 1100.00;
			}
		}
		else if (item == "Iphone") { 
			if (damaged == true) {
			price = 600.00/2;
			}
			else {
				price = 600.00;
			}
		}
		else if (item == "TV") {
			if (damaged == true) {
			price = 1525.30/2;
			}
			else {
			price = 1525.30;
			}
		}
		else if (item == "Charger") {
			if (damaged == true) {
			price = 15.75/2;
			}
			else {
			price = 15.75;
			}	
		}
		else {
			price = 0.00;
		}
		return price;
	}
}
