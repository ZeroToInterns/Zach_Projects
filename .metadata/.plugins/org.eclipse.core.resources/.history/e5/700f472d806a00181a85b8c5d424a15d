
public class Tester {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//class does not have to be instantiated 
		chooseRoom("Dog", false, 'M' );
	}
	
	//chooseRoom static method method
	public static void chooseRoom(String animal, boolean isSick, char gender ) {
		//checks if animal is a dog
		if (isSick) {
			System.out.println("We don't accept sick animals");
			java.lang.System.exit(0);
		}
		else {
		}
			 if (animal.equalsIgnoreCase("Dog")) {
					 if (gender == 'M') {
						 System.out.println("Put the dog in the male dog room");
					 }
					 else {
						 System.out.println("Put the dog in the female dog room");
					 }
			 }
			 else if (animal == "Cat" || animal == "cat") {
					 if (gender == 'M') {
						 System.out.println("Put the cat in the male cat room");
					 }
					 else {
						 System.out.println("Put the cat in the female cat room");
					 }
			 }
			 else if (animal == "Zebra" || animal == "zebra" ) { 
				 if (gender == 'M') {
				 System.out.println("Put the zebra in the male zebra room");
				 }
				 else {
					 System.out.println("Put the zebra in the female zebra room");
				 }
	 }
}
}



	

