	@Test 
	public void testCalculateCost(){
		ControlFlowPractice practice = new ControlFlowPractice();
		System.out.println(practice.calculateCost(59.3));
		assertTrue(practice.calculateCost(59.3) == 100); 

		assertTrue(practice.calculateCost(30.5) == 67); 
	}
