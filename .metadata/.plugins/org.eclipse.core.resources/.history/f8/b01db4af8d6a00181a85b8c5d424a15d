
public class ElectronicsStore {

	public static double getPrice(String item, boolean isDamaged) {
		double price = 0; 
		
		if (item == "Ipad") {
			if (isDamaged == true) {
				price = 350.99/2;
			}
			else if (isDamaged == false){
				price = 350.99; 
			}
		}
		else if (item == "Macbook") { 
			if (isDamaged == true) {
			price = 1100.00/2;
			}
			else if (isDamaged == false){
				price = 1100.00;
			}
		}
		else if (item == "Iphone") { 
			if (isDamaged == true) {
			price = 600.00/2;
			}
			else if (isDamaged == false){
				price = 600.00;
			}
		}
		else if (item == "TV") {
			if (isDamaged == true) {
			price = 1525.30/2;
			}
			else if (isDamaged == false){
			price = 1525.30;
			}
		}
		else if (item == "Charger") {
			if (isDamaged == true) {
			price = 15.75/2;
			}
			else if (isDamaged == false){
			price = 15.75;
			}	
		}
		else {
			price = 0.00;
		}
		
		return price;
	}
}
